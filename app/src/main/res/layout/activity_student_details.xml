<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="16dp">

    <!-- Avatar Image -->
    <ImageView
        android:id="@+id/image_view_avatar"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/avatar"
        android:layout_marginBottom="24dp"
        android:scaleType="fitCenter" />


    <!-- Student ID -->
    <TextView
        android:id="@+id/text_view_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ID: "
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_below="@id/image_view_avatar"
        android:layout_marginBottom="16dp" />

    <!-- Student Name -->
    <TextView
        android:id="@+id/text_view_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name: "
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_below="@id/text_view_id"
        android:layout_marginBottom="16dp" />

    <!-- Student Phone -->
    <TextView
        android:id="@+id/text_view_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Phone: "
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_below="@id/text_view_name"
        android:layout_marginBottom="16dp" />

    <!-- Student Address -->
    <TextView
        android:id="@+id/text_view_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Address: "
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_below="@id/text_view_phone"
        android:layout_marginBottom="16dp" />

    <!-- Student Checked Status as Text -->
    <TextView
        android:id="@+id/text_view_checked"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Checked: "
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_below="@id/text_view_address"
        android:layout_marginBottom="16dp" />

    <!-- Back Button at the Bottom-Left -->
    <Button
        android:id="@+id/button_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Back"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:background="@drawable/rounded_button"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="24dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/button_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:background="@drawable/rounded_button"
        android:layout_above="@id/button_back"
        android:layout_marginBottom="16dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp" />

</RelativeLayout>
